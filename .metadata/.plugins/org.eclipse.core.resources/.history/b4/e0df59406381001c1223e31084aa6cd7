package TestCases;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.PageFactory;
import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

import pageObjectClasses.AddPayeePage;
import pageObjectClasses.LoginPage;
import pageObjectClasses.SignInPage;

public class AddPayeeTestCase {

	WebDriver driver;
	SignInPage si;
	LoginPage lp;
	AddPayeePage ap;
	 
	
	@BeforeClass
	public void launchBrowser() {
		System.setProperty("webdriver.chrome.driver", "C:\\driver\\chromedriver.exe");
		driver = new ChromeDriver();
		si= PageFactory.initElements(driver, SignInPage.class);
		lp= PageFactory.initElements(driver, LoginPage.class);
		ap=PageFactory.initElements(driver, AddPayeePage.class);
		driver.manage().window().maximize();
		driver.get("http://zero.webappsecurity.com/index.html");
		driver.manage().timeouts().implicitlyWait(50, TimeUnit.SECONDS);}
		@Test
		public void addPayee() throws InterruptedException {
			
			si.clickSignIn();
			lp.doLogin("username", "password");
			lp.clickDetailButton();
			lp.clickProceedLink();
			ap.clickPaybills();
			ap.clickAddNewPayee();
			ap.enterPayee("saritha");
			ap.enterPayeeAddress("40 brampton ");
			ap.enterPayeeAccount("122222222");
			ap.enterPayeeDetails("hydroOne utility");
			ap.clickAddBtn();
			String ActualText= driver.findElement(By.id("alert_content")).getText();
			String ExpectedText="The new payee saritha was successfully created.";
			Assert.assertEquals(ActualText,ExpectedText,"Add Payee successful");
			
		}@AfterClass
		public void closeBrowser() {
			driver.close();}
}
			

		
	
	
	
	
	
	
	
	
	
	

